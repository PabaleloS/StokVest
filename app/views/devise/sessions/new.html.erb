<h2 class="text-center">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signup" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
